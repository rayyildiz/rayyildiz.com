---
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Ramazan AYYILDIZ ¬∑ Software Engineer</title>
    <meta name="description" content="Personal blog and portfolio of Ramazan AYYILDIZ - Software Engineer specializing in Big Data, Cloud Native, AI and Distributed Computing" />
    <link rel="canonical" href="https://rayyildiz.com" />
    <meta name="color-scheme" content="light" />
    <meta property="og:title" content="Ramazan AYYILDIZ ¬∑ Software Engineer" />
    <meta property="og:description" content="Personal blog and portfolio - Big Data, Cloud Native, AI & Distributed Computing" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://rayyildiz.com" />
  </head>
  <body class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-primary-50 overflow-x-hidden flex flex-col">
    <!-- Animated background elements -->
    <div class="fixed inset-0 overflow-hidden pointer-events-none">
      <div class="absolute -top-40 -right-40 w-96 h-96 bg-gradient-to-br from-primary-400/20 to-accent-400/20 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-gradient-to-tr from-accent-400/20 to-primary-400/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-gradient-to-r from-primary-200/10 via-accent-200/10 to-primary-200/10 rounded-full blur-3xl"></div>
      
      <!-- Reddish glow elements -->
      <div class="absolute top-1/4 -left-20 w-72 h-72 bg-gradient-to-br from-rose-400/15 to-red-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 0.5s;"></div>
      <div class="absolute bottom-1/4 -right-20 w-80 h-80 bg-gradient-to-tl from-red-400/15 to-rose-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1.5s;"></div>
      
      <!-- Floating shapes -->
      <div class="absolute top-20 left-[15%] w-4 h-4 bg-primary-400/40 rounded-full animate-float"></div>
      <div class="absolute top-40 right-[20%] w-3 h-3 bg-accent-400/40 rounded-full animate-float" style="animation-delay: 0.5s;"></div>
      <div class="absolute bottom-32 left-[25%] w-5 h-5 bg-primary-300/40 rounded-full animate-float" style="animation-delay: 1s;"></div>
      <div class="absolute bottom-20 right-[30%] w-3 h-3 bg-accent-300/40 rounded-full animate-float" style="animation-delay: 1.5s;"></div>
      
      <!-- Reddish floating shapes -->
      <div class="absolute top-32 right-[10%] w-4 h-4 bg-rose-400/35 rounded-full animate-float" style="animation-delay: 0.8s;"></div>
      <div class="absolute bottom-40 left-[10%] w-3 h-3 bg-red-400/35 rounded-full animate-float" style="animation-delay: 1.2s;"></div>
      <div class="absolute top-1/2 right-[5%] w-5 h-5 bg-rose-300/30 rounded-full animate-float" style="animation-delay: 2s;"></div>
      
      <!-- Grid pattern -->
      <div class="absolute inset-0 bg-[linear-gradient(rgba(37,99,235,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(37,99,235,0.03)_1px,transparent_1px)] bg-[size:50px_50px]"></div>
    </div>

    <!-- Main content -->
    <main class="relative flex-1 flex flex-col items-center justify-center px-6 py-12">
      <!-- Avatar with glow effect -->
      <div class="relative mb-8 group">
        <div class="absolute inset-0 bg-gradient-to-r from-primary-500 to-accent-500 rounded-full blur-xl opacity-50 group-hover:opacity-70 transition-opacity duration-500 scale-110"></div>
        <div class="relative">
          <img 
            src="/avatars/rayyildiz.jpg" 
            alt="rayyildiz" 
            class="w-32 h-32 md:w-40 md:h-40 rounded-full border-4 border-white shadow-2xl object-cover transition-transform duration-500 group-hover:scale-105"
          />
          <div class="absolute -bottom-2 -right-2 w-8 h-8 bg-gradient-to-r from-primary-500 to-accent-500 rounded-full flex items-center justify-center shadow-lg">
            <span class="text-white text-sm">üë®‚Äçüíª</span>
          </div>
        </div>
      </div>

      <!-- Name and title -->
      <div class="text-center mb-8">
        <h1 class="text-4xl md:text-6xl font-bold mb-4">
          <span class="bg-gradient-to-r from-primary-600 via-primary-500 to-accent-500 bg-clip-text text-transparent">
            Ramazan AYYILDIZ
          </span>
        </h1>
        <div class="flex flex-wrap items-center justify-center gap-2 md:gap-3 mb-6">
          <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-primary-100 text-primary-700 rounded-full text-sm font-medium">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
            </svg>
            Software Engineer
          </span>
          <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-accent-100 text-accent-700 rounded-full text-sm font-medium">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"/>
            </svg>
            Big Data
          </span>
          <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-gradient-to-r from-primary-100 to-accent-100 text-primary-700 rounded-full text-sm font-medium">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
            Cloud Native
          </span>
          <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-primary-100 text-primary-700 rounded-full text-sm font-medium">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            GenAI
          </span>
        </div>
        <p class="text-slate-600 text-lg md:text-xl max-w-lg mx-auto leading-relaxed">
          Just for fun ‚Äî exploring 
          <span class="text-primary-600 font-medium">distributed computing</span>, 
          <span class="text-accent-600 font-medium">artificial intelligence</span>, and 
          <span class="bg-gradient-to-r from-primary-600 to-accent-600 bg-clip-text text-transparent font-medium">cloud native technologies</span>.
        </p>
      </div>

      <!-- Language selection -->
      <div class="mb-10">
        <p class="text-center text-slate-500 text-sm mb-4 font-medium uppercase tracking-wider">Choose your language</p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a 
            href="/posts/" 
            class="group relative px-8 py-4 bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 border border-slate-200 hover:border-primary-300 overflow-hidden"
          >
            <div class="absolute inset-0 bg-gradient-to-r from-primary-500 to-primary-600 translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
            <div class="relative flex items-center gap-4">
              <span class="text-3xl">üá¨üáß</span>
              <div>
                <span class="block text-lg font-bold text-slate-800 group-hover:text-white transition-colors">English</span>
                <span class="block text-sm text-slate-500 group-hover:text-primary-100 transition-colors">Read blog in English</span>
              </div>
              <svg class="w-5 h-5 text-slate-400 group-hover:text-white transition-colors ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
              </svg>
            </div>
          </a>
          
          <a 
            href="/tr/posts/" 
            class="group relative px-8 py-4 bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 border border-slate-200 hover:border-red-300 overflow-hidden"
          >
            <div class="absolute inset-0 bg-gradient-to-r from-red-500 to-red-600 translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
            <div class="relative flex items-center gap-4">
              <span class="text-3xl">üáπüá∑</span>
              <div>
                <span class="block text-lg font-bold text-slate-800 group-hover:text-white transition-colors">T√ºrk√ße</span>
                <span class="block text-sm text-slate-500 group-hover:text-red-100 transition-colors">Blogu T√ºrk√ße oku</span>
              </div>
              <svg class="w-5 h-5 text-slate-400 group-hover:text-white transition-colors ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
              </svg>
            </div>
          </a>
        </div>
      </div>

      <!-- Tech stack pills -->
      <div class="flex flex-wrap justify-center gap-2 max-w-xl mb-10">
        {['Rust', 'Go', 'Python', 'Kafka', 'Kubernetes', 'Spark', 'PostgreSQL', 'Redis', 'AWS', 'Docker', 'LLM', 'RAG'].map((tech) => (
          <span class="px-3 py-1 bg-white/80 backdrop-blur-sm text-slate-600 rounded-full text-xs font-medium border border-slate-200 hover:border-primary-300 hover:text-primary-600 transition-colors cursor-default">
            {tech}
          </span>
        ))}
      </div>

      <!-- Social links -->
      <div class="flex items-center gap-4">
        <a 
          href="https://github.com/rayyildiz" 
          target="_blank" 
          rel="noopener noreferrer"
          class="p-3 bg-white rounded-full shadow-md hover:shadow-lg transition-all duration-300 text-slate-600 hover:text-slate-900 hover:scale-110"
          aria-label="GitHub"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
