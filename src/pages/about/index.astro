---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AboutContent, { frontmatter } from '../../content/pages/en/about.md';
---

<BaseLayout lang="en" title={frontmatter.title} description={frontmatter.description}>
  <article class="prose prose-slate max-w-none prose-headings:text-[var(--color-text)] prose-a:text-primary-600 prose-a:no-underline hover:prose-a:underline">
    <h1 class="gradient-text !bg-clip-text">{frontmatter.title}</h1>
    <AboutContent />
  </article>
</BaseLayout>
